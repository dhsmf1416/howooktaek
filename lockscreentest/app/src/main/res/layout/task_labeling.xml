<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/labelingimage_layout">

    <View
        android:id="@+id/verticalleft"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#88ffff00"
        android:elevation="999dp"
        app:layout_constraintBottom_toTopOf="@+id/horizontaldown"
        app:layout_constraintEnd_toEndOf="@+id/vertical1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalup" />

    <View
        android:id="@+id/horizontalup"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="999dp"
        android:background="#88ffff00"
        app:layout_constraintBottom_toBottomOf="@+id/horizontal1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/labelingimage"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/horizontal2"
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:layout_marginTop="300dp"
        android:background="@drawable/topborder"
        android:elevation="1001dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LL2" />

    <View
        android:id="@+id/horizontal1"
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:layout_marginTop="104dp"
        android:background="@drawable/bottomborder"
        android:elevation="1000dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LL2" />

    <ImageView
        android:id="@+id/labelingimage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LL2"
        app:layout_constraintVertical_bias="0.559" />

    <View
        android:id="@+id/horizontaldown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#88ffff00"
        android:elevation="1000dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/horizontal2"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/vertical1"
        android:layout_width="12dp"
        android:layout_height="0dp"
        android:layout_marginLeft="128dp"
        android:layout_marginStart="128dp"
        android:background="@drawable/rightborder"
        android:elevation="1000dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/horizontalup" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/LL2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/labelingtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:hint="temp"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/submit"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/mybutton"
            android:text="제출"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <View
        android:id="@+id/vertical2"
        android:layout_width="12dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="256dp"
        android:layout_marginStart="256dp"
        android:background="@drawable/leftborder"
        android:elevation="1000dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/horizontalup"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/verticalleft2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#88ffff00"
        android:elevation="999dp"
        app:layout_constraintBottom_toTopOf="@+id/horizontal2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/vertical2"
        app:layout_constraintTop_toBottomOf="@+id/horizontalup" />

</android.support.constraint.ConstraintLayout>